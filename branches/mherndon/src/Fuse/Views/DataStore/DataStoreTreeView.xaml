<UserControl x:Class="Fuse.Views.DataStore.DataStoreTreeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:fuse="clr-namespace:Fuse.Views.DataStore.TreeViewItems"
     ScrollViewer.CanContentScroll="True">
	
		<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
			<ToolBar Height="25" VerticalAlignment="Top" HorizontalAlignment="Stretch">
				<Button Name="Add" ToolTip="Add Database">
					<Image Name="AddImage" />
				</Button>

				<Button Name="Remove" ToolTip="Remove Database">
					<Image Name="RemoveImage" />
				</Button>
			</ToolBar>
			<ScrollViewer VerticalContentAlignment="Bottom" HorizontalScrollBarVisibility="Visible"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0, 25, 0, 0">
				<TreeView  Name="DataStoreView"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"   ScrollViewer.HorizontalScrollBarVisibility="Auto">
					<fuse:MsSqlDatabaseTreeViewItem IsExpanded="True" Text="Test">
					</fuse:MsSqlDatabaseTreeViewItem>
				</TreeView>
			</ScrollViewer>
			
		</Grid>
	
</UserControl>
